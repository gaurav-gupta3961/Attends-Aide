<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewchild"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:drawableTint="@color/c1"
        android:drawablePadding="10dp"
        android:layout_marginHorizontal="12sp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:paddingTop="8dp"
        android:text="Gaurav"
        android:textColor="@color/c1"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center_vertical"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/sendemail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical|left"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/ic_email"
        android:visibility="invisible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ProgressBar
            android:id="@+id/progresssafe2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="3dp"
            android:elevation="1dp"
            android:progress="80"
            android:progressDrawable="@drawable/halo"
            android:rotation="270"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressunsafe2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="3dp"
            android:elevation="2dp"
            android:progress="30"
            android:progressDrawable="@drawable/hale_unsafe"
            android:rotation="270"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progress_2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="3dp"
            android:progress="100"
            android:visibility="visible"
            android:progressDrawable="@drawable/halo_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Attendance"
            android:textColor="@color/c1"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/progress_2"
            tools:layout_editor_absoluteX="5dp" />

        <TextView
            android:id="@+id/textviewpercentage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75%"
            android:textColor="@color/c1"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/progress_2"
            app:layout_constraintEnd_toEndOf="@+id/progress_2"
            app:layout_constraintStart_toStartOf="@+id/progress_2"
            app:layout_constraintTop_toTopOf="@+id/progress_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>