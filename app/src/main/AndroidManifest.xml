<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.attendancemanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Attend"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Student.studentActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Student.StudentAttendence"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Teacher.TeacherActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Student.StudentQr"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Student.StudentSchedule"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Student.StudentUploadImage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Admin.LessAttendence"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Admin.LessAttendenceEx"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Teacher.ListOfAbsentees"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Teacher.SeeAttendence"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
