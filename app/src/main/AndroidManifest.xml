            android:name=".Teacher.StartAttendence"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Teacher.AddAClass"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Teacher.TeacherSchedule"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Teacher.teacherWaitPage"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Admin.DetailsOfSelectedTeacher"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Teacher.SignUpAsTeacher2"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Student.SignUpAsStudent2"
            android:theme="@style/AppTheme.NoActionBar"
